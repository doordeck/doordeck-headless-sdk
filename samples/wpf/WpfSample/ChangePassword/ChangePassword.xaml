<Window x:Class="WpfSample.ChangePassword.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfSample.ChangePassword"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Change password" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Title -->
            <RowDefinition Height="Auto" /> <!-- Current password -->
            <RowDefinition Height="Auto" /> <!-- New password -->
            <RowDefinition Height="Auto" /> <!-- Submit button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" /> <!-- Icon -->
            <ColumnDefinition Width="*" /> <!-- Input -->
        </Grid.ColumnDefinitions>
        <!-- Title -->
        <TextBlock Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Text="Change password" FontSize="16" FontWeight="Bold" Margin="10" TextAlignment="Center" />
        <!-- Title -->
        <materialDesign:PackIcon Kind="Password" Grid.Column="0" Grid.Row="1" Margin="10" VerticalAlignment="Center"/>
        <!-- Input -->
        <PasswordBox Grid.Column="1" Grid.Row="1" x:Name="CurrentPasswordBox" Margin="10" materialDesign:HintAssist.Hint="Current password" />
        <!-- Title -->
        <materialDesign:PackIcon Kind="Password" Grid.Column="0" Grid.Row="2" Margin="10" VerticalAlignment="Center"/>
        <!-- Input -->
        <PasswordBox Grid.Column="1" Grid.Row="2" x:Name="NewPasswordBox" Margin="10" materialDesign:HintAssist.Hint="New password" />
        <!-- Submit button -->
        <Button Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="3" Content="Change password" Margin="10" Click="ChangePassword_Click"/>
    </Grid>
</Window>
